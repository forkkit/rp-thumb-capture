{
  "manifest_version": 2,

  "name": "Ractive Video Thumbnail Generator",
  "description": "This extension generates thumbnails for Ractive videos.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["https://math.sulyma.dev/l/*"],
    "js": ["content.js"]
  }],
  "externally_connectable": {
    "matches": ["*://math.sulyma.dev/*"]
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "tabs",
    "tabCapture",
    "http://math.sulyma.dev/*",
    "https://math.sulyma.dev/*"
  ]
}