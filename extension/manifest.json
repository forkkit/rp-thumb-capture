{
  "manifest_version": 2,

  "name": "Ractive Video Thumbnail Generator",
  "description": "This extension generates thumbnails for Ractive videos.",
  "version": "1.0",

  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ],
    "persistent": false
  },

  "page_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "externally_connectable": {
    "matches": ["*://lmqm.dev/*"]
  },
  "permissions": [
    "activeTab",
    "declarativeContent",
    "tabs",
    "tabCapture",
    "http://lmqm.dev/*",
    "https://lmqm.dev/*"
  ]
}